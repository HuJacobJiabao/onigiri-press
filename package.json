{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "onigiri-press",
  "private": false,
  "version": "1.1.16",
  "type": "module",
  "description": "A modern, lightweight portfolio and blog framework built with React, TypeScript, and Vite. Easy to customize, supports markdown content, and includes powerful blog functionality.",
  "homepage": "https://github.com/HuJacobJiabao/onigiri-press",
  "repository": {
    "type": "git",
    "url": "https://github.com/HuJacobJiabao/onigiri-press.git"
  },
  "keywords": [
    "portfolio",
    "blog",
    "react",
    "typescript",
    "vite",
    "framework",
    "markdown",
    "static-site",
    "responsive",
    "modern",
    "onigiri",
    "cms",
    "press"
  ],
  "author": "Onigiri Framework Contributors",
  "license": "MIT",
  "bin": {
    "ongr": "./bin/onigiri-press.js"
  },
  "bugs": {
    "url": "https://github.com/HuJacobJiabao/onigiri-press/issues"
  },
  "scripts": {
    "dev": "npm run preprocess && vite",
    "build": "npm run preprocess && tsc -b && vite build && cp public/404.html dist/404.html",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy": "gh-pages -d dist",
    "generate": "tsx src/scripts/generate.ts",
    "g": "tsx src/scripts/generate.ts",
    "log": "tsx src/scripts/create-daily-log.ts",
    "preprocess": "tsx src/scripts/preprocess-content.ts",
    "p": "tsx src/scripts/preprocess-content.ts",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@rollup/plugin-yaml": "^4.1.2",
    "@types/markdown-it": "^14.1.2",
    "@types/react-transition-group": "^4.4.12",
    "@vitejs/plugin-react": "^4.4.1",
    "aplayer": "^1.10.1",
    "buffer": "^6.0.3",
    "commander": "^13.1.0",
    "gh-pages": "^6.3.0",
    "katex": "^0.16.22",
    "markdown-it": "^14.1.0",
    "markdown-it-deflist": "^3.0.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-mark": "^4.0.0",
    "markdown-it-prism": "^2.3.1",
    "markdown-it-task-lists": "^2.1.1",
    "meting": "^2.0.1",
    "onigiri-press": "^1.0.10",
    "prismjs": "^1.30.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.30.1",
    "react-transition-group": "^4.4.5",
    "tsx": "^4.19.4",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/js-yaml": "^4.0.9",
    "@types/katex": "^0.16.7",
    "@types/node": "^22.15.29",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript-eslint": "^8.30.1"
  }
}
